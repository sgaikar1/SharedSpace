<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_feed_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_margin="30dp"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/iv_fav" />
            <customfonts.MavenProTextView
                android:id="@+id/tv_rent_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="amount"
                android:padding="10dp"
                android:textSize="18sp"
                android:layout_gravity="bottom"
                android:background="@color/mdtp_transparent_black"
                android:textColor="@color/mdtp_white"
                />
            <customfonts.MavenProTextView
                android:id="@+id/tv_tenant_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="boy"
                android:padding="10dp"
                android:textSize="18sp"
                android:layout_gravity="bottom|right|end"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@color/mdtp_transparent_black"
                android:textColor="@color/mdtp_white"
                />

        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp">
        <customfonts.MavenProTextView
            android:id="@+id/tv_address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="addressline one"
            android:maxLines="1"
            android:textSize="20sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_address1"
            android:orientation="horizontal"
            android:weightSum="3">
            <customfonts.MavenProTextView
                android:id="@+id/tv_address2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="address 2"
                android:layout_weight="1"
                android:maxLines="1"
                />
            <View
                android:layout_width="5dp"
                android:background="@color/mdtp_light_gray"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
            <customfonts.MavenProTextView
                android:id="@+id/tv_bedroom_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 BHK"
                android:layout_weight="1"
                android:maxLines="1"
                />
            <customfonts.MavenProTextView
                android:id="@+id/tv_bed_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Bed avaiable"
                android:textColor="@color/colorAccent"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:maxLines="1"
                />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>